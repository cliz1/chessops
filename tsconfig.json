{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/esm",
    "strict": true,
    "strictPropertyInitialization": false,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "lib": ["ES2018"],
    "module": "esnext",
    "target": "es2019",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "emitDeclarationOnly": false,
    "moduleDetection": "force"
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.ts", "node_modules"]
}
